{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Campaigns information",
	"type": "object",
	"properties": {
		"hvcs": {
			"type": "object",
			"properties": {
				"target": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true,
					"faker": "random.number"
				},
				"campaigns": {
					"type": "array",
					"maxItems": 15,
					"items": {
						"type": "string",
						"faker": "lorem.sentence"
					}
				}
			},
			"required": [ "target", "campaigns" ]
		},
		"name":{
			"type": "string",
			"faker": "lorem.words"
		},
		"campaigns": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"campaign": {
						"type": "string",
						"faker": "lorem.words"
					},
					"totals": {
						"type": "object",
						"properties": {
							"hvc": {
								"type": "object",
								"properties": {
									"value": {
										"type": "object",
										"properties": {
											"non_confirmed": {
												"type": "number",
												"faker": "random.number"
											},
											"confirmed": {
												"type": "number",
												"faker": "random.number"
											},
											"total": {
												"type": "number"
											}
										},
										"required": [ "non_confirmed", "confirmed", "total" ]
									},
									"number": {
										"type": "object",
										"properties": {
											"non_confirmed": {
												"type": "number",
												"faker": {
													"random.number": [ 1000 ]
												}
											},
											"confirmed": {
												"type": "number",
												"faker": {
													"random.number": [ 1000 ]
												}
											},
											"total": {
												"type": "number"
											},
											"required": [ "non_confirmed", "confirmed", "total" ]
										}
									},
									"required": [ "value", "number" ]
								}
							},
							"change": {
								"type": "string"
							},
							"progress": {
								"type": "object",
								"properties": {
									"confirmed_percent": {
										"type": "number",
										"faker": {
											"finance.amount": [ 0, 1, 2 ]
										}
									},
									"unconfirmed_percent": {
										"type": "number",
										"faker": {
											"finance.amount": [ 0, 1, 2 ]
										}
									},
									"status": {
										"type": "string",
										"pattern": "red|amber|green"
									}
								},
								"target": {
									"type": "number",
									"random.number": [ 5000000000 ]
								}
							},
							"required": [ "hvc", "change", "progress", "target" ]
						}
					},
					"required": [ "campaign", "totals" ]
				}
			},
			"required": [ "non_export", "hvc", "non_hvc" ]
		}
	},
	"required": [ "hvcs", "name", "campaigns" ],
}
