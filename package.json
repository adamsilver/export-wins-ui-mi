{
  "name": "export-wins-ui-mi",
  "version": "1.2.4",
  "description": "An MI dashboard for Export Wins",
  "main": "server.js",
  "govuk-template-version": "0.19.1",
  "engines": {
    "node": "6.9.1",
    "npm": "3.10.8"
  },
  "scripts": {
    "template:get": "VERSION=$npm_package_govuk_template_version; curl -L https://github.com/alphagov/govuk_template/releases/download/v$VERSION/jinja_govuk_template-$VERSION.tgz | tar -zxv",
    "template:prepare": "VERSION=$npm_package_govuk_template_version; cd jinja_govuk_template-${VERSION}; cp views/layouts/govuk_template.html .; node ../replace.js",
    "template:copy": "VERSION=$npm_package_govuk_template_version; cd jinja_govuk_template-${VERSION}; cp govuk_template.html ../src/app/views/; mkdir ../src/public/govuk-${VERSION}/; cp -r assets ../src/public/govuk-${VERSION}/",
    "template:remove-fonts": "VERSION=$npm_package_govuk_template_version; cd src/public/govuk-${VERSION}/assets/stylesheets/; rm -r fonts/ fonts*.css",
    "template:remove": "VERSION=$npm_package_govuk_template_version; rm -r jinja_govuk_template-${VERSION};",
    "template:remove-font-style": "grunt --verbose --debug --stack template-font",
    "template": "run-s template:get template:prepare template:copy template:remove-fonts template:remove-font-style template:remove",
    "test": "npm run test:unit",
    "test-all": "run-s test:*",
    "test:unit": "JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "test:stubs": "JASMINE_CONFIG_PATH=src/test/stubs/jasmine.json jasmine",
    "test:mocks": "JASMINE_CONFIG_PATH=src/test/mocks/jasmine.json jasmine",
    "test:client": "karma start",
    "heroku-postbuild": "npm run build:dist",
    "start": "NODE_ENV=production node --use-strict dist/server.js",
    "start:server": "node --use-strict server.js",
    "app": "node --use-strict src/app/app.js",
    "watch": "run-p watch:*",
    "watch:node": "nodemon src/app/app.js --ignore 'src/public/**/*' --ignore 'src/test/**/*'",
    "build": "grunt dist",
    "build:dist": "npm run sass:prod && grunt dist && npm run dist-install",
    "dist": "npm run build:dist && npm run start",
    "dist-install": "cd dist && npm install --production",
    "lint": "eslint .",
    "watch:sass": "node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./node_modules/govuk-elements-sass/public/sass/ --include-path ./node_modules/govuk_frontend_toolkit/stylesheets -w -r",
    "sass:dev": "node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./node_modules/govuk-elements-sass/public/sass/ --include-path ./node_modules/govuk_frontend_toolkit/stylesheets",
    "sass:prod": "node-sass src/public/sass/main.scss src/public/css/main.css --include-path ./node_modules/govuk-elements-sass/public/sass/ --include-path ./node_modules/govuk_frontend_toolkit/stylesheets -x --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uktrade/export-wins-ui-mi.git"
  },
  "keywords": [
    "node",
    "skeleton",
    "app"
  ],
  "author": "Graham Veal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uktrade/export-wins-ui-mi/issues"
  },
  "homepage": "https://github.com/uktrade/export-wins-ui-mi#readme",
  "dependencies": {
    "body-parser": "*",
    "cookie-parser": "1.4.3",
    "express": "*",
    "jsonwebtoken": "7.2.1",
    "morgan": "*",
    "nunjucks": "*",
    "random-int": "1.0.0",
    "request": "2.76.0",
    "serve-static": "*",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "eslint": "3.10.2",
    "govuk_frontend_toolkit": "5.0.2",
    "grunt": "*",
    "grunt-contrib-clean": "*",
    "grunt-contrib-compress": "*",
    "grunt-contrib-concat": "*",
    "grunt-contrib-copy": "*",
    "grunt-contrib-cssmin": "*",
    "grunt-contrib-uglify": "*",
    "grunt-filerev": "*",
    "grunt-mkdir": "*",
    "grunt-replace": "1.0.1",
    "grunt-usemin": "*",
    "jasmine": "*",
    "jasmine-core": "*",
    "karma": "*",
    "karma-chrome-launcher": "*",
    "karma-jasmine": "*",
    "load-grunt-tasks": "*",
    "node-sass": "4.0.0",
    "nodemon": "*",
    "npm-run-all": "3.1.1",
    "proxyquire": "1.7.10"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
